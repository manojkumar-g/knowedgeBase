@import "jeet"
@import "rupture"
@import url('https://fonts.googleapis.com/css?family=Architects+Daughter|Open+Sans|Ubuntu')

.head
  column(1)
  border-bottom: 1px solid silver
  .container
    center(1020px)
    margin-top 0
    border-bottom: 1px solid silver
  .title
    column(1/4)
    cursor: pointer
    h1
      column(1)
      bold()
      font-family: 'Architects Daughter'
      color black
  .menu
    font-family: 'Ubuntu'
    ul
      inline-list()
      li
        cursor: pointer
        padding: 15px
        float: right
      .write
        color green
.content
  column(1)
  .container
    center(1020px)
    margin-top 0
