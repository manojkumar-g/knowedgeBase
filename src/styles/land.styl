@import "jeet"
@import "rupture"
@import url('https://fonts.googleapis.com/css?family=Architects+Daughter|Open+Sans|Ubuntu|Macondo')
*
  box-sizing: border-box
  position: relative

.head
  column(1)
  border-bottom: 1px solid silver
  .container
    center(1020px)
    margin-top 0
    border-bottom: 1px solid silver
  .title
    column(1/4)
    cursor: pointer
    h1
      column(1)
      bold()
      font-family: 'Architects Daughter'
      color black
  .menu
    font-family: 'Ubuntu'
    ul
      inline-list()
      li
        cursor: pointer
        padding: 15px
        float: right
      .write
        color green
        text-decoration: none
.content
  column(1)
  .container
    center(960px)
    margin-top 0
.writeStory
  column(1)
  font-family: Ubuntu
.writer
  column(11/12,$offset:1/12)
  margin-top: 5vh
  i
    font-size: 3em
  span
    margin-top: 0px
    font-size: 2em
.story
  column(1)
  padding-top 50px
.storyPart
  column(1)
.storymenu
  column(1/12)
  font-size: 1.5em
  color: maroon
  padding: 15px
  i
    cursor: pointer
    transition: all .5s
.act
    transform: rotateZ(90deg)
.storyData
  column(11/12)
.text
.hiddenDiv
  font-family: 'Ubuntu'
  column(1)
.text
  overflow: hidden
  border none
  resize none
  outline: none
.hiddenDiv
  column(1)
  white-space: pre-wrap
  word-wrap: break-word
  overflow-wrap: break-word
  position absolute
  margin-left -9999px
  visibility hidden
.titleText
  font-size: 2em
  color navy
  bold()
.subTitle
  font-size: 1.3em
  bold()
.paragraph
  font-family Open Sans
  fs: 1.3em
  normal()
.quote
  blockquote blue
  column(1)
  fs: 1.5em
  font-family Macondo
  italic()
.code
  fs: 1.3em
  font-family Consolas
.tooltip
  inline-list()
  position: absolute
  height: 1.5em
  z-index: 1
  transform:translate(25px,-25px)
  padding .2em
  li
    cursor: pointer
    text-align: center
    width: 50px
    height: 50px
    rounded()
    background: gray
    color maroon
    border 1px solid white
    font-size: .7em
    margin 0px 5px
    padding:15px
    &:hover
      background: maroon
      color: white
.activeStyle
  background: maroon
  color: white
